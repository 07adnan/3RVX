<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<skin>
  <info>
    <author>Matthew Malensek</author>
    <website>http://matthew.malensek.net/</website>
  </info>

  <osds>
    <volume background="Volume/background.png">
      <meter
        type      = "NumberStrip"
        image     = "OSD/numbers.png"
        size      = "13"
        align     = "right"
        columns   = "1"
        units     = "20"
        
        x         = "50"
        y         = "10"
        boxWidth  = "40"
        boxHeight = "23"
      />
      <meter
        type ="HorizontalTile"
        image="Volume/bars.png"
        x="129"
        y="26"
        units="23"
      />
    </volume>

    <mute background="Volume/mute.png"/>

    <brightness background="Brightness/background.png">
      <meter 
        type  = "HorizontalBar"
        image = "OSD/meter.png"
        units = "16" 
        x     = "33" 
        y     = "165" 
      />
    </brightness>
  </osds>

  <controller>
    <slider 
      type  = "vertical"
      x     = "26"
      y     = "20"
      width = "17"
      height= "98"
    />

    <muteButton 
      x     = "5"
      y     = "5"
    />
  </controller>
</skin>
